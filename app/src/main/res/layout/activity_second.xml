<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerVertical="true"
        android:lines="1"
        android:background="#FFFFFF"
        android:text="常见问题"
        android:textColor="#333333"
        android:textSize="17sp"/>

    <RelativeLayout
        android:id="@+id/questionLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#F5F5F5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文学会员与爱奇艺VIP会员的区别"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/openClose1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_open"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/openCloseTv"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:textSize="13dp"
        android:textColor="#666666"
        android:lineSpacingExtra="12dp"
        android:text="爱奇艺VIP会员的权益主要覆盖爱奇艺视频业务，文学会员的权益主要覆盖文学业务；两者并不通用，爱奇艺VIP用户可以享有文学部分优惠特权，具体可以到精选页-福利专区中查看。"
        android:visibility="gone"/>

</LinearLayout>
